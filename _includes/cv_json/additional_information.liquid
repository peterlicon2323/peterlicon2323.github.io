<div class="list-groups">
  {% for content in data %}
    {% for pair in content %}
      <div class="list-group col-md-6">
        <table class="table-cv list-group-table">
          <tbody>
            <tr>
              <td class="list-group-category-icon">
                <i class="fa-solid fa-link"></i>
              </td>
              <!-- Calculate colspan number for category title -->
              {% assign i = 1 %}
              {% assign keywords = pair[1] | split: ',' %} <!-- Assuming value might be comma-separated if needed, but here it's single -->
              {% for item in keywords %}
                {% assign i = i | plus: 1 %}
              {% endfor %}
              <td colspan="{{ i }}" class="list-group-category">{{ pair[0] }}</td>
            </tr>
            {% for item in keywords %}
              <tr>
                <td></td>
                <td class="list-group-name">
                  <a href="{{ item }}" target="_blank">{{ item }}</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    {% endfor %}
  {% endfor %}
</div>