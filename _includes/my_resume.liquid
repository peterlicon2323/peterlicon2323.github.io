            --cv-column-2-bg: #e2e8f0; /* Light gray for contrast */
            --cv-column-3-bg: #dbeafe; /* Faint blue to tie in accent */
        }
        /* Light theme (default) */
        [data-theme="light"] {
            --cv-text-color: #1f2937;
            --cv-muted-color: #6b7280;
            --cv-background: #ffffff;
            --cv-border: #e2e8f0;
            --cv-accent-color: #1e40af;
            --cv-link-color: #1e40af;
            --cv-accent-bg: #ffffff;
            --cv-muted-bg: #f8f9fa;
            --cv-zebra-bg-odd: #ffffff;
            --cv-zebra-bg-even: #f1f3f5;
            --cv-column-1-bg: #f8fafc;
            --cv-column-2-bg: #e2e8f0;
            --cv-column-3-bg: #dbeafe;
        }

        /* Dark theme */
        [data-theme="dark"] {
            --cv-text-color: #f0f0f0;
            --cv-muted-color: #a0a0a0;
            --cv-background: #1a1a1a;
            --cv-border: #4b5563;
            --cv-accent-color: #60a5fa;
            --cv-link-color: #90cdf4;
            --cv-accent-bg: #1a1a1a;
            --cv-muted-bg: #2a2a2a;
            --cv-zebra-bg-odd: #2f343a;
            --cv-zebra-bg-even: #3c4248;
            --cv-column-1-bg: #1e293b; /* Dark slate for depth */
            --cv-column-2-bg: #334155; /* Slightly lighter slate */
            --cv-column-3-bg: #3b4a6b; /* Muted blue for accent */
        }

        .cv {
            font-family: var(--cv-font-family);
            color: var(--cv-text-color);
            line-height: 1.6;
            background-color: var(--cv-background);
        }
        .cv p { margin: 0; }
        .cv h1, .cv h2 { font-weight: normal; }
        .cv-photo {
            height: 150px;
            margin: 0 1.5em 1.5em 0;
            margin-left: 1.5em !important;
            margin-right: 1.5em !important;
            float: left;
            border-radius: 50%;
            border: 2px solid var(--cv-border);
            border-bottom-width: 0px !important;
            border-top-width: 0px !important;
        }
        .cv-name {
            font-size: clamp(2em, calc(2em + 0.8vw), 2.5em);
            line-height: 1.2;
            margin: 0.5em 0;
            text-align: left;
            color: var(--cv-accent-color);
            background-color: var(--cv-accent-bg);
        }
        .name-slogan {
            margin-left: 1em; 
            margin-right: 1em; 
            border-bottom-width: 0em; 
            margin-bottom: 1em;
        }
        .cv-basic-info-item {
            margin-right: 1.5em;
            white-space: nowrap;
        }
        .cv-basic-info {
            clear: both;
            text-align: center;
            font-size: clamp(0.8em, calc(0.8em + 0.2vw), 0.95em);
            margin-bottom: 1rem !important;
        }
        .cv-section {
            padding-top: 0rem !important;
            border-top: 0rem !important;
            margin-top: 0rem !important;
            margin-bottom: 0.25em !important;
            margin-right: 1em !important;
            margin-left: 1em !important;
