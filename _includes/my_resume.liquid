            {% if cv.facebook %}
                <span class="contact-block">
                    <img src="{{ '/assets/svg/facebook.svg' | relative_url }}" style="width: 20px; height: 20px;" alt="facebook icon"/>
                    <a class="contact" href="{{cv.facebook}}">{{cv.facebook | replace: 'https://facebook.com/', ''}}</a>
                </span>
            {% endif %}
        </div>
    </section>

    <!-- Sections -->
    {% for sec_id in cv.sections %}
        {% assign section = cv.data[sec_id] %}
        <section class="cv-section" id="{{sec_id}}">
            <header class="cv-section-header">
                <h2 class="text-primary cv-section-title">{{section.title}}</h2>
            </header>
            {% if sec_id == 'education' %}
                {% for item in section.items %}
                    <div class="cv-item">
                        <div class="cv-item-row">
                            <div>
                                <span>{{item.degree}}</span>
                            </div>
                            {% if item.thesis %}
                            <div>
                                <em>GPA:</em>
                                <span>{{item.gpa}}</span>
                            </div>
                            {% endif %}
                            <div>
                                <span>{{item.date | markdownify}}</span>
                            </div>
                        </div>
                        <div class="cv-item-content">
                            <em>University:</em>
                            <span class="university-name">
                                {{item.university | markdownify | strip_html}}
                            </span>
                        </div>
                        {% if item.thesis %}
                            <div class="cv-item-content">
                                <em>Thesis:</em>
                                <span class="thesis-name">
                                    <p style="display:inline;">{{item.thesis | strip_html}}</p>
                                </span>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            {% elsif sec_id == 'projects' %}
                <div class="three-column-section">
                    {% for item in section.items %}
                        <div class="cv-item">
                            <div class="cv-item-row two-columns">
                                <div class="cv-item-row-name">
                                    <span>{{item.name}}</span>
                                </div>
                                <div>
                                    {% if item.url %}
                                        {% if item.url contains 'github.com' %}
                                        <img src="{{ '/assets/svg/github.svg' | relative_url }}" style="width: 12px; height: 12px;" alt="GitHub icon"/>
                                        <span>
                                            <a href="{{ item.url }}">{{ item.url | replace: 'https://github.com/', '' }}</a>
                                        </span>
                                        {% elsif item.url contains 'gitlab.com' %}
                                        <img src="{{ '/assets/svg/gitlab.svg' | relative_url }}" style="width: 12px; height: 12px;" alt="GitLab icon"/>
                                        <span>
                                            <a href="{{ item.url }}">{{ item.url | replace: 'https://gitlab.com/', '' }}</a>
                                        </span>
                                        {% elsif item.url contains 'huggingface.co' %}
                                        <img src="{{ '/assets/svg/huggingface.svg' | relative_url }}" style="width: 12px; height: 12px;" alt="Hugging Face icon"/>
                                        <span>
                                            <a href="{{ item.url }}">{{ item.url | replace: 'https://huggingface.co/', '' }}</a>
                                        </span>
                                        {% else %}
                                        <span></span>
                                        {% endif %}
                                    {% else %}
                                        <span></span>
                                    {% endif %}
                                </div>
                                <div>
                                    <span>{{item.date | markdownify}}</span>
                                </div>
                            </div>
                            {% if item.description %}
                                <div class="cv-item-content about">
                                    <span style="font-style: italic;">
                                        <p style="display:inline;">{{item.description | markdownify | strip_html}}</p>
                                    </span>
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
                <div class="cv-item-content more">
                    <em>For further details on additional projects, please refer to 
                        <a href="#additional_info" style="color: var(--cv-accent-color); text-decoration: none; font-weight: 700;">
                            More Information
                        </a>.</em>
                </div>
            {% elsif sec_id == 'certificates' %}
                <div class="three-column-section">
                    {% for item in section.items %}
                        <div class="cv-item">
                            <div class="cv-item-row two-columns">
                                <div class="cv-item-row-name">
                                    <span>{{item.name}}</span>
                                </div>
                                <div>
                                    {% if item.url %}
                                        <a href="{{ item.url }}" target="_blank" style="margin-right: 0.15rem;">{{ item.provider_issuer }}</a>
                                        <img src="/assets/svg/url.svg" style="width: 11px; height: 11px;" alt="url icon">
                                    {% else %}
                                        <span>{{ item.provider_issuer }}</span>
                                    {% endif %}
                                </div>
                                <div><span>{{item.date | markdownify}}</span></div>
                            </div>
                            <div class="cv-item-content about">
                                {% if item.description %}
                                    <div>
                                        <span>
                                            <p style="display:inline;">{{item.description | markdownify | strip_html}}</p>
                                        </span>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="cv-item-content more">
                    <em>For a detailed and comprehensive list of certificates, please consult the additional information provided in the
                        <a href="#additional_info" style="color: var(--cv-accent-color); text-decoration: none; font-weight: 700;">
                            More Information
                        </a>.</em>
                </div>
            {% elsif sec_id == 'experience' %}
                {% for item in section.items %}
                    <div class="cv-item">
                        <div class="cv-item-row">
                            <span>{{item.job_title | markdownify}}</span>
                            <span>{{item.organization | markdownify}}</span>
                            <span>{{item.date | markdownify}}</span>
                        </div>
                        <div class="cv-item-content">
                            {% if item.description %}
                                <div>
                                    <em>About:</em>
                                    <span style="font-style: italic; font-size: 0.85rem;">
                                        <p style="display:inline;">{{item.description | markdownify | strip_html}}</p>
                                    </span>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            
            {% elsif sec_id == 'skills' %}
            <!--
                <div class="cv-item-content">
                    <div class="skills-grid">
                        {% for skill in section.items %}
                            {% assign skill_percentage = skill.score | split: '/' | first | strip | times: 10 %}
                            <div class="skill-progress-container">
                                <span class="skill-progress-label">{{skill.skill}}</span>
                                <div class="skill-progress-bar">
                                    <div class="skill-progress-fill" style="width: {{skill_percentage}}%;"></div>
                                </div>
                                <span class="skill-progress-text">{{skill.score}}</span>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            -->
                
                <div class="cv-item-content">
                    <div class="skills-grid" style="display: grid; grid-template-columns: repeat(3, 1fr); grid-template-rows: repeat(2, auto); gap: 20px;">
                        {% for group in section.items %}
                            <div class="skill-group">
                                <!-- SEARCH: <h3 class="group-title">{{ group.group_name }}</h3> -->
                                <!-- REPLACE: --> 
                                <span class="group-title">{{ group.group_name }}</span>
                                <ul class="skill-list">
                                    {% for skill in group.group_name_elements %}
                                        <li>{{ skill.element }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            

            {% elsif sec_id == 'additional_info' %}
                <div style="display: flex; align-content: center; justify-content: center; gap: 1rem; font-size: 0.8rem;">
                    {% for item in section.items %}
                        <div class="cv-item" style="margin-bottom: 0rem;">
                            <div class="cv-item-row" style="display: flex; justify-content: center !important;">
                                <div class="cv-item-title" style="text-align: right; margin-top: 0rem; padding-right: 0.1rem;">
                                    {{ item.name }}
                                </div>
                                {% if item.url %}
                                    <span>•</span>
                                    <div class="cv-item-title" style="text-align: left; margin-top: 0rem; padding-left: 0.1rem;">
                                        {% if item.url contains 'github.com' %}
                                            <img src="{{ '/assets/svg/github.svg' | relative_url }}" style="width: 14px; height: 14px;" alt="GitHub icon"/>
                                        {% elsif item.url contains 'huggingface.co' %}
                                            <img src="{{ '/assets/svg/huggingface.svg' | relative_url }}" style="width: 14px; height: 14px;" alt="Hugging Face icon"/>
                                        {% else %}
                                            <img src="{{ '/assets/svg/website.svg' | relative_url }}" style="width: 14px; height: 14px;" alt="Website icon"/>
                                        {% endif %}
                                        <a href="{{ item.url }}" style="color: var(--cv-accent-color); text-decoration: none; margin-left: 0.15em;">{{ item.url | replace: 'https://', '' }}</a>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        {% unless forloop.last %}
                            <span style="margin: 0 0.5rem;">|</span>
                        {% endunless %}
                    {% endfor %}
                </div>
            {% endif %}
        </section>
    {% endfor %}

</div>
