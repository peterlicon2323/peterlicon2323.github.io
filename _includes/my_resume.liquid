            color: var(--cv-muted-color);
            font-style: italic;
            font-size: 0.75rem;
        }
        .cv-item-row {
            font-size: clamp(0.9em, calc(0.9em + 0.4vw), 1.05em);
            margin-bottom: 0em;
            display: flex;
            flex-wrap: wrap;
            gap: 0.5em;
            align-items: center;
            justify-content: space-between;
            font-weight: 700;
        }
        .cv-item-row a {
            color: var(--cv-link-color);
            text-decoration: none;
        }
        .cv-item-row a:hover {
            text-decoration: underline;
        }
        .skill-progress-container {
            margin: 0em 0em;
            display: flex;
            align-items: center;
            gap: 1em;
            width: 100%;
            flex-wrap: nowrap;
        }
        .skill-progress-label {
            width: 15rem;
            font-weight: 600;
            font-size: clamp(0.9em, calc(0.9em + 0.4vw), 1.05em);
            color: var(--cv-text-color);
            flex-shrink: 0;
        }
