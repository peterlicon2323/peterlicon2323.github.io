            background-color: var(--cv-zebra-bg-odd);
        }
        .two-column-section .cv-item:nth-child(4n-2), .two-column-section .cv-item:nth-child(4n-1) {
            background-color: var(--cv-zebra-bg-even);
        }
        .three-column-section .cv-item:nth-child(9n+1),
        .three-column-section .cv-item:nth-child(9n+6),
        .three-column-section .cv-item:nth-child(9n+8) {
            background-color: var(--cv-column-1-bg);
        }
        .three-column-section .cv-item:nth-child(9n+2),
        .three-column-section .cv-item:nth-child(9n+4),
        .three-column-section .cv-item:nth-child(9n+9) {
            background-color: var(--cv-column-2-bg);
        }
        .three-column-section .cv-item:nth-child(9n+3),
        .three-column-section .cv-item:nth-child(9n+5),
        .three-column-section .cv-item:nth-child(9n+7) {
            background-color: var(--cv-column-3-bg);
        }
        {% unless config.no_lines %}
        .cv-section-header { position: relative; }
        .cv-section-title { display: inline-block; background: var(--cv-accent-bg) !important; padding-right: 1.5em; }
        .cv-section-title:after {
            position: absolute;
            top: 50%;
            z-index: -1;
            content: '';
            display: block;
            width: 100%;
            border-top: 2px solid var(--cv-accent-color);
        }
        {% endunless %}
        .cv-section:not(:first-child) {
            margin-top: 2.5em;
            padding-top: 2.5em;
            border-top: 1px solid var(--cv-border);
        }
        .text-muted {
            color: var(--cv-muted-color) !important;
            background-color: var(--cv-muted-bg) !important;
            opacity: 1;
            font-style: italic;
        }
        .cv ul { margin: 0.5em 0; }
        .cv-basic-info-item a[href]:after { content: none !important; }
        .contact {
            white-space: nowrap;
            font-size: clamp(0.8em, calc(0.8em + 0.2vw), 0.95em);
